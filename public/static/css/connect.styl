body
    background-color #f6f6f6
    font-size 14px
    margin 0px
.box
    background-color #fff
    border-radius 8px
    border 1px solid #d6d6d6
    position absolute
    width 500px
    .btn-success
        width 100%
        border 0px
    .form-control
        &:focus    
        &:active 
            outline none
            shadow none
    .inside
        padding 16px
    .header
        border-radius 8px
        a
            img
                display block
                margin 0px auto
                width 50%
    .footer
        text-align center
        a
            display inline-block
            font-size .8am
            &:last-child
                margin 24px


.box_login
    top: 50%
    left: 50%
    transform translate(-50%,-50%)
.box_register
    top: 50%
    left: 50%
    transform translate(-50%,-50%)

.mtop16
    margin-top 16px
.input-group-text
      display block
    
    